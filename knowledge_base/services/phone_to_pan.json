{
  "category": "ALTERNATE DATA SUITE",
  "service_name": "Phone to PAN",
  "description": "This service retrieves the PAN (Permanent Account Number) associated with a given phone number. It provides the PAN details for alternate data-based verification workflows.",
  "llm_summary": "Phone to PAN service maps a phone number to the associated PAN (Permanent Account Number). Useful for alternate data verification, fraud prevention, and compliance workflows.",
  "tags": [
    "phone to pan",
    "data verification",
    "compliance",
    "onboarding api",
    "secure kyc",
    "identity verification"
  ],
  "use_cases": [
    "Retrieve the PAN linked to a phone number for onboarding workflows.",
    "Support compliance and fraud prevention by verifying phone-linked PAN information.",
    "Enable alternate data-based KYC processes in financial services and insurance.",
    "Verify phone-linked PAN for identity verification workflows in government and private sectors."
  ],
  "request_schema": [
    {
      "field": "mobileNumber",
      "type": "string",
      "description": "Mobile number to map to the associated PAN.",
      "validations": {
        "minLength": 10,
        "maxLength": 10,
        "pattern": "\\d{10}"
      },
      "required": true
    },
    {
      "field": "consent",
      "type": "boolean",
      "description": "User consent for accessing phone-linked PAN data",
      "validations": {
        "allowedValues": [true, false]
      },
      "required": true
    }
  ],
  "response_schema": [
    {
      "field": "status",
      "type": "string",
      "description": "Overall status of the API response",
      "validations": {
        "allowedValues": ["success", "error", "failed"]
      },
      "required": true
    },
    {
      "field": "requestId",
      "type": "string",
      "description": "Unique request ID generated by the API",
      "validations": {
        "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
      },
      "required": true
    },
    {
      "field": "type",
      "type": "string",
      "description": "Type of verification performed",
      "validations": {
        "allowedValues": ["point"]
      },
      "required": true
    },
    {
      "field": "serviceStatusCode",
      "type": "integer",
      "description": "HTTP status code for the service",
      "validations": {
        "minimum": 100,
        "maximum": 599
      },
      "required": true
    },
    {
      "field": "data",
      "type": "object",
      "description": "PAN details associated with the phone number",
      "properties": {
        "panNumber": {
          "type": "array",
          "description": "List of PAN numbers associated with the phone number",
          "items": {
            "type": "string"
          }
        }
      },
      "required": true
    },
    {
      "field": "vendorResponse",
      "type": "array",
      "description": "Response details from vendors",
      "items": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "integer",
            "description": "Vendor-specific status code"
          },
          "name": {
            "type": "string",
            "description": "Vendor name"
          },
          "sequence": {
            "type": "integer",
            "description": "Vendor sequence number"
          }
        }
      },
      "required": true
    }
  ],
  "example_request": {
    "input": {
      "mobileNumber": "9870963498",
      "consent": true
    }
  },
  "example_response": {
    "status": "success",
    "requestId": "f03b8df6-971c-4f6e-a347-c5e5dea453d4",
    "type": "point",
    "serviceStatusCode": 200,
    "data": {
      "panNumber": [
        "CDZPP6767P"
      ]
    },
    "vendorResponse": [
      {
        "statusCode": 200,
        "name": "AzureRaven",
        "sequence": 1
      }
    ]
  },
  "available_vendors": [
    "AzureRaven",
    "IndigoBison",
    "JadeToucan",
    "CobaltEagle",
    "GoldenOtter",
    "SilverTiger",
    "EmeraldWhale",
    "CrimsonFalcon"
  ]
}
