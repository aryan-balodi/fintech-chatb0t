{
  "category": "EMPLOYMENT VERIFICATION",
  "service_name": "(Recent) Employment Basic (Mobile based) (EPFO)",
  "description": "This service retrieves recent employment details linked to a given mobile number, based on EPFO records. It provides insights into employment status, UAN details, and associated employment history.",
  "llm_summary": "(Recent) Employment Basic (Mobile based) (EPFO) maps a mobile number to recent employment details using EPFO data, aiding in employment verification, compliance, and HR processes.",
  "tags": [
    "recent employment",
    "mobile to employment",
    "employment verification",
    "epfo",
    "uan lookup",
    "compliance",
    "identity mapping"
  ],
  "use_cases": [
    "Verify recent employment details linked to a mobile number for employee onboarding.",
    "Ensure compliance with EPFO regulations during employment verification.",
    "Assist HR systems in mapping mobile numbers to employment history for payroll processing.",
    "Support identity validation workflows in employment and compliance checks."
  ],
  "request_schema": [
    {
      "field": "mobileNumber",
      "type": "string",
      "description": "Mobile number to fetch recent employment details.",
      "validations": {
        "pattern": "^\\d{10}$"
      },
      "required": true
    },
    {
      "field": "consent",
      "type": "boolean",
      "description": "User consent for accessing employment details.",
      "validations": {
        "allowedValues": [true, false]
      },
      "required": true
    }
  ],
  "response_schema": [
    {
      "field": "status",
      "type": "string",
      "description": "Overall status of the API response.",
      "validations": {
        "allowedValues": ["success", "error", "failed"]
      },
      "required": true
    },
    {
      "field": "requestId",
      "type": "string",
      "description": "Unique request ID generated by the API.",
      "validations": {
        "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
      },
      "required": true
    },
    {
      "field": "type",
      "type": "string",
      "description": "Type of verification performed.",
      "validations": {
        "allowedValues": ["point"]
      },
      "required": true
    },
    {
      "field": "serviceStatusCode",
      "type": "integer",
      "description": "HTTP status code for the service.",
      "validations": {
        "minimum": 100,
        "maximum": 599
      },
      "required": true
    },
    {
      "field": "data",
      "type": "object",
      "description": "Recent employment details associated with the mobile number.",
      "properties": {
        "insights": {
          "type": "object",
          "description": "Insights into employment status.",
          "properties": {
            "isEmployed": {
              "type": "boolean",
              "description": "Indicates if the individual is currently employed."
            },
            "dateOfExitMarked": {
              "type": "boolean",
              "description": "Indicates if a date of exit is marked for the individual."
            }
          }
        },
        "uanSummary": {
          "type": "object",
          "description": "Summary of UAN details.",
          "properties": {
            "count": {
              "type": "string",
              "description": "Number of UANs associated with the mobile number."
            },
            "uan": {
              "type": "string",
              "description": "Comma-separated list of UANs."
            }
          }
        },
        "uanDetails": {
          "type": "array",
          "description": "Detailed UAN information.",
          "items": {
            "type": "object",
            "properties": {
              "uan": {
                "type": "string",
                "description": "Universal Account Number (UAN)."
              },
              "employeeDetails": {
                "type": "object",
                "description": "Details of the employee associated with the UAN.",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Name of the employee."
                  },
                  "gender": {
                    "type": "string",
                    "description": "Gender of the employee."
                  },
                  "dateOfBirth": {
                    "type": "string",
                    "description": "Date of birth of the employee."
                  },
                  "aadhaarVerificationStatus": {
                    "type": "integer",
                    "description": "Aadhaar verification status of the employee."
                  },
                  "mobile": {
                    "type": "string",
                    "description": "Mobile number of the employee."
                  }
                }
              },
              "employmentDetails": {
                "type": "object",
                "description": "Details of the employment associated with the UAN.",
                "properties": {
                  "memberId": {
                    "type": "string",
                    "description": "EPFO Member ID."
                  },
                  "establishmentId": {
                    "type": "string",
                    "description": "Establishment ID."
                  },
                  "establishmentName": {
                    "type": "string",
                    "description": "Name of the establishment."
                  },
                  "dateOfJoining": {
                    "type": "string",
                    "description": "Date of joining the establishment."
                  },
                  "dateOfExit": {
                    "type": "string",
                    "description": "Date of exit from the establishment."
                  },
                  "leaveReason": {
                    "type": "string",
                    "description": "Reason for leaving the establishment."
                  }
                }
              }
            }
          }
        }
      },
      "required": true
    },
    {
      "field": "vendorResponse",
      "type": "array",
      "description": "Response details from vendors.",
      "items": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "integer",
            "description": "Vendor-specific status code."
          },
          "name": {
            "type": "string",
            "description": "Vendor name."
          },
          "sequence": {
            "type": "integer",
            "description": "Vendor sequence number."
          }
        }
      },
      "required": true
    }
  ],
  "example_request": {
    "input": {
