{
  "category": "ONBOARDING INDIVIDUAL",
  "service_name": "Pan to Masked Aadhaar (Last 4 digits)",
  "description": "This service helps you retrieve the masked Aadhaar number (showing only last 4 digits) linked to a given PAN number. It provides privacy-compliant Aadhaar verification while maintaining data security through masking.",
  "llm_summary": "Pan to Masked Aadhaar retrieves the last 4 digits of Aadhaar linked to a PAN for privacy-compliant identity verification. Requires user consent and returns masked Aadhaar with validation status for secure onboarding workflows.",
  "tags": [
    "pan to aadhaar",
    "masked aadhaar",
    "privacy compliant",
    "identity verification",
    "aadhaar linking",
    "onboarding api",
    "data security",
    "last 4 digits"
  ],
  "use_cases": [
    "Privacy-compliant Aadhaar verification during individual customer onboarding.",
    "Validate PAN-Aadhaar linkage without exposing full Aadhaar number.",
    "Secure identity verification for financial services and banking.",
    "Compliance with data protection regulations while verifying identity documents.",
    "Cross-verification of government-issued identity documents for KYC processes."
  ],
  "request_schema": [
    {
      "field": "panNumber",
      "type": "string",
      "description": "PAN (Permanent Account Number) to fetch linked masked Aadhaar.",
      "validations": {
        "minLength": 10,
        "maxLength": 10,
        "pattern": "[A-Za-z]{5}\\d{4}[A-Za-z]{1}"
      },
      "required": true
    },
    {
      "field": "consent",
      "type": "boolean",
      "description": "User consent for accessing PAN-Aadhaar linkage data",
      "validations": {
        "allowedValues": [true, false]
      },
      "required": true
    }
  ],
  "response_schema": [
    {
      "field": "status",
      "type": "string",
      "description": "Overall status of the API response",
      "validations": {
        "allowedValues": ["success", "error", "failed"]
      },
      "required": true
    },
    {
      "field": "requestId",
      "type": "string",
      "description": "Unique request ID generated by the API",
      "validations": {
        "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
      },
      "required": true
    },
    {
      "field": "type",
      "type": "string",
      "description": "Type of verification performed",
      "validations": {
        "allowedValues": ["point"]
      },
      "required": true
    },
    {
      "field": "serviceStatusCode",
      "type": "integer",
      "description": "HTTP status code for the service",
      "validations": {
        "minimum": 100,
        "maximum": 599
      },
      "required": true
    },
    {
      "field": "data",
      "type": "object",
      "description": "Masked Aadhaar and validation data",
      "properties": {
        "maskedAadhaar": {
          "type": "string",
          "description": "Aadhaar number with first 8 digits masked, showing only last 4 digits"
        },
        "status": {
          "type": "string",
          "description": "Validation status of the PAN-Aadhaar linkage"
        }
      },
      "required": true
    },
    {
      "field": "vendorResponse",
      "type": "array",
      "description": "Response details from vendors",
      "items": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "integer",
            "description": "Vendor-specific status code"
          },
          "name": {
            "type": "string",
            "description": "Vendor name"
          },
          "sequence": {
            "type": "integer",
            "description": "Vendor sequence number"
          }
        }
      },
      "required": true
    }
  ],
  "example_request": {
    "input": {
      "panNumber": "CDZPP6767P",
      "consent": true
    }
  },
  "example_response": {
    "status": "success",
    "requestId": "0168cb97-ee85-4d25-8409-648540e697db",
    "type": "point",
    "serviceStatusCode": 200,
    "data": {
      "maskedAadhaar": "XXXXXXXX8906",
      "status": "valid"
    },
    "vendorResponse": [
      {
        "statusCode": 200,
        "name": "AzureRaven",
        "sequence": 1
      }
    ]
  },
  "available_vendors": [
