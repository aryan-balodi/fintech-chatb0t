{
  "category": "ALTERNATE DATA SUITE",
  "service_name": "(Email) Domain based Company Classification",
  "description": "This service classifies a company based on its email domain. It provides information such as domain creation date, website responsiveness, ASN details, and categorized business classifications for alternate data-based verification workflows.",
  "llm_summary": "(Email) Domain based Company Classification service analyzes an email domain to classify the associated company, providing details like domain creation date, ASN information, and business categories. Useful for alternate data verification, fraud prevention, and compliance workflows.",
  "tags": [
    "email domain classification",
    "company classification",
    "data verification",
    "compliance",
    "onboarding api",
    "secure kyc",
    "business intelligence"
  ],
  "use_cases": [
    "Classify a company based on its email domain for onboarding workflows.",
    "Support compliance and fraud prevention by analyzing email domain information.",
    "Enable alternate data-based KYC processes in financial services and insurance.",
    "Gain business intelligence by categorizing companies based on their email domains."
  ],
  "request_schema": [
    {
      "field": "domainName",
      "type": "string",
      "description": "Domain name to classify the associated company.",
      "validations": {
        "format": "domain"
      },
      "required": true
    },
    {
      "field": "consent",
      "type": "boolean",
      "description": "User consent for accessing domain-based company classification data",
      "validations": {
        "allowedValues": [true, false]
      },
      "required": true
    }
  ],
  "response_schema": [
    {
      "field": "status",
      "type": "string",
      "description": "Overall status of the API response",
      "validations": {
        "allowedValues": ["success", "error", "failed"]
      },
      "required": true
    },
    {
      "field": "requestId",
      "type": "string",
      "description": "Unique request ID generated by the API",
      "validations": {
        "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
      },
      "required": true
    },
    {
      "field": "type",
      "type": "string",
      "description": "Type of verification performed",
      "validations": {
        "allowedValues": ["point"]
      },
      "required": true
    },
    {
      "field": "serviceStatusCode",
      "type": "integer",
      "description": "HTTP status code for the service",
      "validations": {
        "minimum": 100,
        "maximum": 599
      },
      "required": true
    },
    {
      "field": "data",
      "type": "object",
      "description": "Details of the classified company based on the email domain",
      "properties": {
        "domain": {
          "type": "string",
          "description": "The verified domain name"
        },
        "createdDate": {
          "type": "string",
          "description": "Creation date of the domain"
        },
        "isWebsiteResponding": {
          "type": "boolean",
          "description": "Indicates if the website associated with the domain is responding"
        },
        "asnInfo": {
          "type": "object",
          "description": "ASN details of the domain",
          "properties": {
            "asn": {
              "type": "integer",
              "description": "ASN number of the domain"
            },
            "name": {
              "type": "string",
              "description": "Name of the ASN"
            },
            "type": {
              "type": "string",
              "description": "Type of the ASN"
            },
            "domain": {
              "type": "string",
              "description": "Domain associated with the ASN"
            },
            "route": {
              "type": "string",
              "description": "Route of the ASN"
            }
          }
        },
        "categories": {
          "type": "array",
          "description": "List of business categories associated with the domain",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer",
                "description": "Category ID"
              },
              "name": {
                "type": "string",
                "description": "Name of the category"
              },
              "confidence": {
                "type": "number",
                "description": "Confidence score of the category classification"
              }
            }
          }
        }
      },
      "required": true
    },
    {
      "field": "vendorResponse",
      "type": "array",
      "description": "Response details from vendors",
      "items": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "integer",
            "description": "Vendor-specific status code"
          },
          "name": {
            "type": "string",
            "description": "Vendor name"
          },
          "sequence": {
            "type": "integer",
            "description": "Vendor sequence number"
          }
        }
      },
      "required": true
    }
  ],
