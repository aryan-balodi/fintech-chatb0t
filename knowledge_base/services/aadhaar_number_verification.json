{
  "category": "ONBOARDING INDIVIDUAL",
  "service_name": "Aadhaar Number Verification (UIDAI)",
  "description": "This service verifies the Aadhaar number and provides key details such as state, gender, and age range. It ensures secure and accurate identity verification for onboarding workflows, leveraging UIDAI data.",
  "llm_summary": "Aadhaar Number Verification validates Aadhaar numbers and retrieves demographic details like state, gender, and age range. Requires user consent and ensures secure onboarding and compliance workflows.",
  "tags": [
    "aadhaar verification",
    "uidai",
    "identity verification",
    "onboarding api",
    "demographic details",
    "compliance",
    "aadhaar validation",
    "secure kyc"
  ],
  "use_cases": [
    "Verify Aadhaar number during individual customer onboarding.",
    "Retrieve demographic details for compliance and fraud prevention.",
    "Ensure accurate KYC data for financial services and banking.",
    "Validate Aadhaar-linked details for regulatory reporting.",
    "Support identity verification workflows in government and private sectors."
  ],
  "request_schema": [
    {
      "field": "aadhaarNumber",
      "type": "string",
      "description": "Aadhaar number to verify.",
      "validations": {
        "minLength": 12,
        "maxLength": 12,
        "pattern": "\\d{12}"
      },
      "required": true
    },
    {
      "field": "consent",
      "type": "boolean",
      "description": "User consent for accessing Aadhaar-linked data",
      "validations": {
        "allowedValues": [true, false]
      },
      "required": true
    }
  ],
  "response_schema": [
    {
      "field": "status",
      "type": "string",
      "description": "Overall status of the API response",
      "validations": {
        "allowedValues": ["success", "error", "failed"]
      },
      "required": true
    },
    {
      "field": "requestId",
      "type": "string",
      "description": "Unique request ID generated by the API",
      "validations": {
        "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
      },
      "required": true
    },
    {
      "field": "type",
      "type": "string",
      "description": "Type of verification performed",
      "validations": {
        "allowedValues": ["point"]
      },
      "required": true
    },
    {
      "field": "serviceStatusCode",
      "type": "integer",
      "description": "HTTP status code for the service",
      "validations": {
        "minimum": 100,
        "maximum": 599
      },
      "required": true
    },
    {
      "field": "data",
      "type": "object",
      "description": "Aadhaar verification data",
      "properties": {
        "aadhaarNumber": {
          "type": "string",
          "description": "Masked Aadhaar number"
        },
        "lastDigits": {
          "type": "string",
          "description": "Last three digits of the Aadhaar number"
        },
        "state": {
          "type": "string",
          "description": "State associated with the Aadhaar number"
        },
        "gender": {
          "type": "string",
          "description": "Gender of the Aadhaar holder"
        },
        "isMobile": {
          "type": "boolean",
          "description": "Indicates if a mobile number is linked to the Aadhaar"
        },
        "ageRange": {
          "type": "string",
          "description": "Age range of the Aadhaar holder"
        },
        "lessInfo": {
          "type": "string",
          "description": "Indicates if less information is available"
        }
      },
      "required": true
    },
    {
      "field": "vendorResponse",
      "type": "array",
      "description": "Response details from vendors",
      "items": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "integer",
            "description": "Vendor-specific status code"
          },
          "name": {
            "type": "string",
            "description": "Vendor name"
          },
          "sequence": {
            "type": "integer",
            "description": "Vendor sequence number"
          }
        }
      },
      "required": true
    }
  ],
  "example_request": {
    "input": {
      "aadhaarNumber": "XXXXXXXX8906",
      "consent": true
    }
  },
  "example_response": {
    "status": "success",
    "requestId": "4ad8b4f5-db37-4e11-a85a-3e82970c5b89",
    "type": "point",
    "serviceStatusCode": 200,
    "data": {
      "aadhaarNumber": "XXXXXXXX8906",
      "lastDigits": "498",
      "state": "Maharashtra",
      "gender": "M",
      "isMobile": true,
      "ageRange": "30-40",
      "lessInfo": "false"
    },
    "vendorResponse": [
      {
        "statusCode": 200,
        "name": "AzureRaven",
        "sequence": 1
      }
    ]
  },
  "available_vendors": [
    "OnyxWolf",
    "SapphireSwan",
    "CobaltEagle",
    "SilverTiger",
    "AzureRaven",
    "ScarletPanther",
    "EmeraldWhale",
    "GoldenOtter",
    "CrimsonFalcon"
  ]
}
