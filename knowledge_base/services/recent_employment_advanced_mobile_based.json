{
  "category": "EMPLOYMENT VERIFICATION",
  "service_name": "(Recent) Employment Advanced (Mobile based) (EPFO)",
  "description": "This service retrieves advanced employment details linked to a given mobile number, based on EPFO records. It provides detailed insights into employment status, UAN details, employment history, and filing details.",
  "llm_summary": "(Recent) Employment Advanced (Mobile based) (EPFO) maps a mobile number to advanced employment details using EPFO data, aiding in employment verification, compliance, and HR processes.",
  "tags": [
    "recent employment",
    "mobile to employment",
    "employment verification",
    "epfo",
    "uan lookup",
    "compliance",
    "identity mapping"
  ],
  "use_cases": [
    "Verify advanced employment details linked to a mobile number for employee onboarding.",
    "Ensure compliance with EPFO regulations during employment verification.",
    "Assist HR systems in mapping mobile numbers to employment history and filing details for payroll processing.",
    "Support identity validation workflows in employment and compliance checks."
  ],
  "request_schema": [
    {
      "field": "mobileNumber",
      "type": "string",
      "description": "Mobile number to fetch advanced employment details.",
      "validations": {
        "pattern": "^\\d{10}$"
      },
      "required": true
    },
    {
      "field": "consent",
      "type": "boolean",
      "description": "User consent for accessing employment details.",
      "validations": {
        "allowedValues": [true, false]
      },
      "required": true
    }
  ],
  "response_schema": [
    {
      "field": "status",
      "type": "string",
      "description": "Overall status of the API response.",
      "validations": {
        "allowedValues": ["success", "error", "failed"]
      },
      "required": true
    },
    {
      "field": "requestId",
      "type": "string",
      "description": "Unique request ID generated by the API.",
      "validations": {
        "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
      },
      "required": true
    },
    {
      "field": "type",
      "type": "string",
      "description": "Type of verification performed.",
      "validations": {
        "allowedValues": ["point"]
      },
      "required": true
    },
    {
      "field": "serviceStatusCode",
      "type": "integer",
      "description": "HTTP status code for the service.",
      "validations": {
        "minimum": 100,
        "maximum": 599
      },
      "required": true
    },
    {
      "field": "data",
      "type": "object",
      "description": "Advanced employment details associated with the mobile number.",
      "properties": {
        "detailedInsights": {
          "type": "object",
          "description": "Detailed insights into employment status.",
          "properties": {
            "isPfFilingRecent": {
              "type": "boolean",
              "description": "Indicates if recent PF filing is present."
            },
            "isEmployeeNameUnique": {
              "type": "boolean",
              "description": "Indicates if the employee name is unique."
            },
            "pfHistoryFound": {
              "type": "boolean",
              "description": "Indicates if PF history is found."
            },
            "isEmployed": {
              "type": "boolean",
              "description": "Indicates if the individual is currently employed."
            },
            "isDateOfExitMarked": {
              "type": "boolean",
              "description": "Indicates if a date of exit is marked for the individual."
            }
          }
        },
        "uanSummary": {
          "type": "object",
          "description": "Summary of UAN details.",
          "properties": {
            "uan": {
              "type": "string",
              "description": "Comma-separated list of UANs."
            },
            "count": {
              "type": "integer",
              "description": "Number of UANs associated with the mobile number."
            }
          }
        },
        "uanDetails": {
          "type": "array",
          "description": "Detailed UAN information.",
          "items": {
            "type": "object",
            "properties": {
              "uan": {
                "type": "string",
                "description": "Universal Account Number (UAN)."
              },
              "employeeDetails": {
                "type": "object",
                "description": "Details of the employee associated with the UAN.",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Name of the employee."
                  },
                  "gender": {
                    "type": "string",
                    "description": "Gender of the employee."
                  },
                  "mobile": {
                    "type": "string",
                    "description": "Mobile number of the employee."
                  },
                  "dateOfBirth": {
                    "type": "string",
                    "description": "Date of birth of the employee."
                  },
                  "aadhaarVerificationStatus": {
                    "type": "string",
                    "description": "Aadhaar verification status of the employee."
                  }
                }
              },
              "employmentDetails": {
                "type": "object",
                "description": "Details of the employment associated with the UAN.",
                "properties": {
                  "memberId": {
                    "type": "string",
                    "description": "EPFO Member ID."
                  },
                  "establishmentId": {
                    "type": "string",
                    "description": "Establishment ID."
                  },
                  "establishmentName": {
                    "type": "string",
                    "description": "Name of the establishment."
                  },
                  "dateOfJoining": {
                    "type": "string",
                    "description": "Date of joining the establishment."
                  },
                  "dateOfExit": {
                    "type": "string",
                    "description": "Date of exit from the establishment."
                  },
                  "leaveReason": {
                    "type": "string",
                    "description": "Reason for leaving the establishment."
                  },
                  "establishmentType": {
                    "type": "string",
                    "description": "Type of the establishment."
                  },
                  "establishmentRegDate": {
                    "type": "string",
                    "description": "Registration date of the establishment."
                  }
                }
              },
              "additionalDetails": {
                "type": "object",
                "description": "Additional details of the employee.",
                "properties": {
                  "aadhaar": {
                    "type": "string",
                    "description": "Aadhaar number of the employee."
                  },
                  "email": {
                    "type": "string",
                    "description": "Email address of the employee."
                  },
                  "pan": {
                    "type": "string",
                    "description": "PAN number of the employee."
                  },
                  "relation": {
                    "type": "string",
                    "description": "Relation of the employee."
                  },
                  "memberId": {
                    "type": "string",
                    "description": "EPFO Member ID."
                  },
                  "bankIFSC": {
                    "type": "string",
                    "description": "Bank IFSC code."
                  },
                  "bankAccountNo": {
                    "type": "string",
                    "description": "Bank account number."
                  },
                  "bankAddress": {
                    "type": "string",
                    "description": "Bank address."
                  },
                  "relativeName": {
                    "type": "string",
                    "description": "Name of the relative."
                  }
                }
              }
            }
          }
        },
        "employeeFilingDetails": {
          "type": "array",
          "description": "Details of employee filings.",
          "items": {}
        },
        "employerFilingDetails": {
          "type": "array",
          "description": "Details of employer filings.",
          "items": {
            "type": "object",
            "properties": {
              "month": {
                "type": "string",
                "description": "Month of the filing."
              },
              "employeesCount": {
                "type": "integer",
                "description": "Number of employees in the filing."
              },
              "totalAmount": {
                "type": "integer",
                "description": "Total amount in the filing."
              }
            }
          }
        }
      },
      "required": true
    },
    {
      "field": "vendorResponse",
      "type": "array",
      "description": "Response details from vendors.",
      "items": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "integer",
            "description": "Vendor-specific status code."
          },
          "name": {
            "type": "string",
            "description": "Vendor name."
          },
          "sequence": {
            "type": "integer",
            "description": "Vendor sequence number."
          }
        }
      },
      "required": true
    }
  ],
