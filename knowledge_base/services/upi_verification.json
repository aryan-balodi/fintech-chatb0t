{
  "category": "BANKING AND PAYMENTS",
  "service_name": "UPI Verification",
  "description": "This service verifies the validity and details of a UPI ID, including the associated bank account and user information. It ensures secure payment processing and compliance.",
  "llm_summary": "UPI Verification validates a UPI ID and retrieves associated details such as user name, bank name, and branch, aiding in secure payment processing and fraud prevention.",
  "tags": [
    "upi verification",
    "banking",
    "payments",
    "fraud prevention",
    "account validation",
    "compliance"
  ],
  "use_cases": [
    "Verify the validity of a UPI ID for payment processing.",
    "Retrieve user and bank details associated with a UPI ID during onboarding or KYC processes.",
    "Prevent fraud by validating UPI IDs before initiating transactions.",
    "Support seamless integration with payment gateways and banking systems."
  ],
  "request_schema": [
    {
      "field": "upiId",
      "type": "string",
      "description": "UPI ID to verify.",
      "validations": {
        "pattern": "^[a-zA-Z0-9._%+-]+@[a-zA-Z0-9.-]+$"
      },
      "required": true
    },
    {
      "field": "consent",
      "type": "boolean",
      "description": "User consent for verifying the UPI ID.",
      "validations": {
        "allowedValues": [true, false]
      },
      "required": true
    }
  ],
  "response_schema": [
    {
      "field": "status",
      "type": "string",
      "description": "Overall status of the API response.",
      "validations": {
        "allowedValues": ["success", "error", "failed"]
      },
      "required": true
    },
    {
      "field": "requestId",
      "type": "string",
      "description": "Unique request ID generated by the API.",
      "validations": {
        "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
      },
      "required": true
    },
    {
      "field": "type",
      "type": "string",
      "description": "Type of verification performed.",
      "validations": {
        "allowedValues": ["point"]
      },
      "required": true
    },
    {
      "field": "serviceStatusCode",
      "type": "integer",
      "description": "HTTP status code for the service.",
      "validations": {
        "minimum": 100,
        "maximum": 599
      },
      "required": true
    },
    {
      "field": "data",
      "type": "object",
      "description": "Details of the UPI verification.",
      "properties": {
        "upiName": {
          "type": "string",
          "description": "Name associated with the UPI ID."
        },
        "bankName": {
          "type": "string",
          "description": "Name of the bank associated with the UPI ID."
        },
        "branch": {
          "type": "string",
          "description": "Branch of the bank associated with the UPI ID."
        },
        "mobile": {
          "type": "string",
          "description": "Mobile number associated with the UPI ID."
        },
        "address": {
          "type": "string",
          "description": "Address of the bank branch associated with the UPI ID."
        },
        "city": {
          "type": "string",
          "description": "City where the bank branch is located."
        },
        "district": {
          "type": "string",
          "description": "District where the bank branch is located."
        },
        "state": {
          "type": "string",
          "description": "State where the bank branch is located."
        }
      },
      "required": true
    },
    {
      "field": "vendorResponse",
      "type": "array",
      "description": "Response details from vendors.",
      "items": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "integer",
            "description": "Vendor-specific status code."
          },
          "name": {
            "type": "string",
            "description": "Vendor name."
          },
          "sequence": {
            "type": "integer",
            "description": "Vendor sequence number."
          }
        }
      },
      "required": true
    }
  ],
  "example_request": {
    "input": {
      "upiId": "pranilpalan@okhdfcbank",
      "consent": true
    }
  },
  "example_response": {
    "status": "success",
    "requestId": "73047fed-22e9-4206-b29f-545fcf23a2c0",
    "type": "point",
    "serviceStatusCode": 200,
    "data": {
      "upiName": "PRANIL VINOD PALAN",
      "bankName": "HDFC Bank",
      "branch": "FORT",
      "mobile": "2261606161",
      "address": "HDFC BANK LTD GROUND FLOOR JEHANGIR BUILDING M G ROAD FORT MUMBAI MAHARASHTRA 400001",
      "city": "MUMBAI",
      "district": "GREATER MUMBAI",
      "state": "MAHARASHTRA"
    },
    "vendorResponse": [
      {
        "statusCode": 200,
        "name": "SilverTiger",
        "sequence": 1
      }
    ]
  },
  "available_vendors": [
    "OnyxWolf",
    "SapphireSwan",
    "CobaltEagle",
    "SilverTiger",
    "AzureRaven",
    "ScarletPanther",
    "EmeraldWhale",
    "GoldenOtter",
    "CrimsonFalcon"
  ]
}
