    "gender": "male",
    "dob": "1980-05-15",
    "address": "123 Main Street, Apt 456, Downtown",
    "addressBuildingName": "Main Plaza",
    "addressLocality": "Downtown",
    "addressStreetName": "Main Street",
    "addressPinCode": "560001",
    "addressCity": "Bangalore",
    "addressState": "Karnataka",
    "addressCountry": "India",
    "fullAddress": "123 Main Street, Apt 456, Downtown, Bangalore, Karnataka, 560001, India",
    "aadhaarLinked": "Yes",
    "maskedAadhaar": "XXXX-XXXX-1234",
    "panStatus": "Active",
    "panCategory": "Individual",
    "statusCode": "SUCCESS"
  },
