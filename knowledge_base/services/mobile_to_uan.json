{
  "category": "EMPLOYMENT VERIFICATION",
  "service_name": "Mobile to UAN (EPFO)",
  "description": "This service retrieves the UAN (Universal Account Number) linked to a given mobile number, based on EPFO records. It facilitates employment verification and compliance workflows.",
  "llm_summary": "Mobile to UAN (EPFO) maps a mobile number to its associated UAN(s) using EPFO data, aiding in employment verification, compliance, and HR processes.",
  "tags": [
    "mobile to uan",
    "uan lookup",
    "employment verification",
    "epfo",
    "compliance",
    "identity mapping"
  ],
  "use_cases": [
    "Verify UAN(s) linked to a mobile number for employee onboarding.",
    "Ensure compliance with EPFO regulations during employment verification.",
    "Assist HR systems in mapping mobile numbers to UANs for payroll processing.",
    "Support identity validation workflows in employment and compliance checks."
  ],
  "request_schema": [
    {
      "field": "mobileNumber",
      "type": "string",
      "description": "Mobile number to fetch UAN.",
      "validations": {
        "pattern": "^\\d{10}$"
      },
      "required": true
    },
    {
      "field": "consent",
      "type": "boolean",
      "description": "User consent for accessing UAN details.",
      "validations": {
        "allowedValues": [true, false]
      },
      "required": true
    }
  ],
  "response_schema": [
    {
      "field": "status",
      "type": "string",
      "description": "Overall status of the API response.",
      "validations": {
        "allowedValues": ["success", "error", "failed"]
      },
      "required": true
    },
    {
      "field": "requestId",
      "type": "string",
      "description": "Unique request ID generated by the API.",
      "validations": {
        "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
      },
      "required": true
    },
    {
      "field": "type",
      "type": "string",
      "description": "Type of verification performed.",
      "validations": {
        "allowedValues": ["point"]
      },
      "required": true
    },
    {
      "field": "serviceStatusCode",
      "type": "integer",
      "description": "HTTP status code for the service.",
      "validations": {
        "minimum": 100,
        "maximum": 599
      },
      "required": true
    },
    {
      "field": "data",
      "type": "object",
      "description": "UAN details associated with the mobile number.",
      "properties": {
        "uan": {
          "type": "string",
          "description": "Universal Account Number (UAN)."
        }
      },
      "required": true
    },
    {
      "field": "vendorResponse",
      "type": "array",
      "description": "Response details from vendors.",
      "items": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "integer",
            "description": "Vendor-specific status code."
          },
          "name": {
            "type": "string",
            "description": "Vendor name."
          },
          "sequence": {
            "type": "integer",
            "description": "Vendor sequence number."
          }
        }
      },
      "required": true
    }
  ],
  "example_request": {
    "input": {
      "mobileNumber": "8888888888",
      "consent": true
    }
  },
  "example_response": {
    "status": "success",
    "requestId": "a8b0704d-9629-41ca-885b-fc700ded724d",
    "type": "point",
    "serviceStatusCode": 200,
    "data": {
      "uan": "101235066441"
    },
    "vendorResponse": [
      {
        "statusCode": 505,
        "name": "AzureRaven",
        "sequence": 1
      },
      {
        "statusCode": 505,
        "name": "SilverTiger",
        "sequence": 2
      },
      {
        "statusCode": 200,
        "name": "ScarletPanther",
        "sequence": 3
      }
    ]
  },
  "available_vendors": [
