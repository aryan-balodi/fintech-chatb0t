{
  "category": "UTILITY BILL AUTHENTICATION",
  "service_name": "Electricity Bill Authentication",
  "description": "This service authenticates electricity bills by verifying consumer details, bill amount, due date, and other related information. It ensures accurate billing and compliance.",
  "llm_summary": "Electricity Bill Authentication validates consumer details and bill information, aiding in utility bill verification, payment processing, and fraud prevention.",
  "tags": [
    "electricity bill authentication",
    "utility bills",
    "bill verification",
    "fraud prevention",
    "billing compliance",
    "consumer authentication"
  ],
  "use_cases": [
    "Authenticate electricity bills for payment processing.",
    "Verify consumer details and bill information during onboarding or KYC processes.",
    "Prevent fraud by validating electricity bill details.",
    "Support seamless integration with utility payment systems."
  ],
  "request_schema": [
    {
      "field": "consumerId",
      "type": "string",
      "description": "Consumer ID to authenticate the electricity bill.",
      "validations": {
        "pattern": "^\\d{10,15}$"
      },
      "required": true
    },
    {
      "field": "serviceProvider",
      "type": "string",
      "description": "Name of the electricity service provider.",
      "validations": {
        "minLength": 1
      },
      "required": true
    },
    {
      "field": "consent",
      "type": "boolean",
      "description": "User consent for authenticating the electricity bill.",
      "validations": {
        "allowedValues": [true, false]
      },
      "required": true
    }
  ],
  "response_schema": [
    {
      "field": "status",
      "type": "string",
      "description": "Overall status of the API response.",
      "validations": {
        "allowedValues": ["success", "error", "failed"]
      },
      "required": true
    },
    {
      "field": "requestId",
      "type": "string",
      "description": "Unique request ID generated by the API.",
      "validations": {
        "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
      },
      "required": true
    },
    {
      "field": "type",
      "type": "string",
      "description": "Type of verification performed.",
      "validations": {
        "allowedValues": ["point"]
      },
      "required": true
    },
    {
      "field": "serviceStatusCode",
      "type": "integer",
      "description": "HTTP status code for the service.",
      "validations": {
        "minimum": 100,
        "maximum": 599
      },
      "required": true
    },
    {
      "field": "data",
      "type": "object",
      "description": "Details of the electricity bill authentication.",
      "properties": {
        "address": {
          "type": "string",
          "description": "Address of the consumer."
        },
        "amountPayable": {
          "type": "integer",
          "description": "Amount payable for the bill."
        },
        "billAmount": {
          "type": "integer",
          "description": "Total bill amount."
        },
        "billDueDate": {
          "type": "string",
          "description": "Due date for the bill payment."
        },
        "billNo": {
          "type": "string",
          "description": "Bill number."
        },
        "consumerName": {
          "type": "string",
          "description": "Name of the consumer."
        },
        "consumerNumber": {
          "type": "string",
          "description": "Consumer number."
        },
        "emailAddress": {
          "type": "string",
          "description": "Email address of the consumer."
        },
        "mobileNumber": {
          "type": "string",
          "description": "Mobile number of the consumer."
        },
        "totalAmount": {
          "type": "integer",
          "description": "Total amount due."
        },
        "billDate": {
          "type": "string",
          "description": "Date of the bill."
        },
        "billIssueDate": {
          "type": "string",
          "description": "Issue date of the bill."
        }
      },
      "required": true
    },
    {
      "field": "vendorResponse",
      "type": "array",
      "description": "Response details from vendors.",
      "items": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "integer",
            "description": "Vendor-specific status code."
          },
          "name": {
            "type": "string",
            "description": "Vendor name."
          },
          "sequence": {
            "type": "integer",
            "description": "Vendor sequence number."
          }
        }
      },
      "required": true
    }
  ],
