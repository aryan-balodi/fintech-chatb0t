{
  "category": "EMPLOYMENT VERIFICATION",
  "service_name": "PAN to UAN",
  "description": "This service help you find the UAN number using the linked PAN number (EPFO based).",
  "llm_summary": "PAN to UAN maps a given PAN number to corresponding UAN(s) issued by EPFO, assisting employment verification and compliance. Requires unique client request ID.",
  "tags": [
    "pan to uan",
    "employment verification",
    "epfo",
    "uan lookup",
    "compliance",
    "identity mapping"
  ],
  "use_cases": [
    "Retrieve UAN(s) associated with a given PAN for employee verification.",
    "Cross-check employment records during onboarding processes.",
    "Facilitate compliance checks based on EPFO-linked UAN data.",
    "Assist payroll and HR systems in validating employee identities."
  ],
  "request_schema": [
    {
      "field": "panNumber",
      "type": "string",
      "description": "PAN number to fetch UAN",
      "validations": {
        "minLength": 10,
        "maxLength": 10,
        "pattern": "[A-Za-z]{5}\\d{4}[A-Za-z]{1}"
      },
      "required": true
    },
    {
      "field": "client_request_id",
      "type": "string",
      "description": "Unique identifier for the client request",
      "validations": {
        "minLength": 1
      },
      "required": true
    }
  ],
  "response_schema": [
    {
      "field": "request_id",
      "type": "string",
      "description": "Unique request ID generated by API",
      "validations": {
        "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[1-5][0-9a-fA-F]{3}-[89abAB][0-9a-fA-F]{3}-[0-9a-fA-F]{12}$"
      },
      "required": true
    },
    {
      "field": "client_request_id",
      "type": "string",
      "description": "Client-provided request ID",
      "validations": {
        "minLength": 1
      },
      "required": true
    },
    {
      "field": "result",
      "type": "array",
      "description": "List of UANs associated with the PAN number",
      "items": {
        "type": "string",
        "validations": {
          "minLength": 1
        }
      },
      "required": true
    },
    {
      "field": "statusCode",
      "type": "string",
      "description": "Status code for the result",
      "validations": {
        "pattern": "^[0-9]+$"
      },
      "required": true
    }
  ],
  "example_request": {
    "input": {
    "panNumber": "ABCTY1234D"
    },
    "client_request_id": "sample_request_123"
  },
  "example_response": {
    "request_id": "12345abcde-6789",
    "client_request_id": "sample_request_123",
    "data": {
        "status": "success",
        "result": [
            "101569109538"
        ],
        "statusCode": "200"
    }
  },
  "available_vendors": [
    "OnyxWolf",
